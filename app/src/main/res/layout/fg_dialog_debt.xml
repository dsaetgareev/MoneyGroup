<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/notification_backraund"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_debt_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="debt"
        android:paddingTop="16dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"

        />

    <LinearLayout
        android:id="@+id/ll_debt_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_debt_dial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_omp_title"
            android:textSize="15sp"
            android:textColor="@color/oweMe" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#fff" />


        <LinearLayout
            android:id="@+id/ll_debt_dial_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_debt_dial_tel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/google_1x"
                android:text="@string/abonent" />

            <TextView
                android:id="@+id/tv_debt_dial_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+79178643123"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_debt_dial_summ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cdebt_dial_summ_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/google_1x"
                android:text="@string/summ" />

            <TextView
                android:id="@+id/tv_debt_dial_summ"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="15000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_debt_dial_cur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_debt_dial_summ_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/google_1x"
                android:text="@string/currency" />

            <TextView
                android:id="@+id/tv_debt_dial_cur"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="EUR" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>