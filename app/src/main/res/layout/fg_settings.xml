<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/google_1x"
        android:id="@+id/rl_settings"
        >

        <LinearLayout
            android:id="@+id/ll_set_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:src="@mipmap/logo11" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:background="@drawable/back"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_set_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:background="@drawable/back"
                    android:text="+79171234567" />

                <Button
                    android:id="@+id/bt_set_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_set_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_set_header"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_set_reset_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_set_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Установить"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/planets_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bt_set_archive_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/view_archive" />

                <Button
                    android:id="@+id/bt_set_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/exit" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_set_push_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_set_middle"
            android:background="@color/colorPrimary"
            android:text="@string/notifications"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_set_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_set_push_title"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="@dimen/google_1x"
                    android:text="@string/auro_cancel" />

                <CheckBox
                    android:id="@+id/cb_set_auto_write_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="@dimen/google_1x"
                    android:text="@string/not_new_debt" />

                <CheckBox
                    android:id="@+id/cb_set_new_debt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="@dimen/google_1x"
                    android:text="@string/not_new_cycle" />

                <CheckBox
                    android:id="@+id/cb_set_chain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="@dimen/google_1x"
                    android:text="@string/multi_valute" />

                <CheckBox
                    android:id="@+id/cb_set_diff_cur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_set_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bt_set_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/akkaunt_remove"
                android:textAlignment="center" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>