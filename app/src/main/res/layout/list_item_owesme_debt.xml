<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/google_1x"
    >

    <TextView
        android:id="@+id/tv_om_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/oweMe"
        />

    <TextView
        android:id="@+id/tv_om_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/oweMe"
        android:layout_below="@id/tv_om_date"
        />

    <ImageView
        android:id="@+id/iv_om_chain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_toStartOf="@id/tv_om_summ"
        android:src="@mipmap/logo11"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_om_summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_currency"
        android:layout_marginRight="@dimen/google_1x"
        android:text="2500"
        android:textColor="@color/oweMe"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_om_icon"
        android:layout_marginRight="@dimen/google_1x"
        android:layout_centerVertical="true"
        android:text="RUB"
        android:textColor="@color/oweMe"
        />

    <TextView
        android:id="@+id/tv_om_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text=">"
        android:layout_centerVertical="true"
        android:textColor="@color/oweMe"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:layout_below="@+id/tv_om_summ"
        />

</RelativeLayout>