<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/google_1x"
    >

    <LinearLayout
        android:id="@+id/ll_set_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/logo11"
            android:layout_weight="1"
            android:background="@drawable/back"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/et_set_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x"
                android:inputType="text"
                android:hint="Имя"
                android:textAlignment="center"
                android:background="@drawable/back"
                />

            <TextView
                android:id="@+id/tv_set_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/google_1x"
                android:text="+79171234567"
                android:background="@drawable/back"
                />

            <Button
                android:id="@+id/bt_set_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_password"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ll_set_header"
        >

        <LinearLayout
            android:id="@+id/ll_set_reset_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/google_1x"
            >
            <Button
                android:id="@+id/bt_set_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Установить"
                android:textAlignment="center"
                android:layout_weight="1"
                />

            <Spinner
                android:id="@+id/planets_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/google_1x"
            >



            <Button
                android:id="@+id/bt_set_archive_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Просмотреть архив"
                />
            <Button
                android:id="@+id/bt_set_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Выйти"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_set_push_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Push уведомления"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/ll_set_middle"
        />

    <LinearLayout
        android:id="@+id/ll_set_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_set_push_title"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/google_1x"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/google_1x"
                android:text="Автоматически списывать долг если цепочка собралась"
                />

            <CheckBox
                android:id="@+id/cb_set_auto_write_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/google_1x"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/google_1x"
                android:text="Уведомление о новом долге"
                />

            <CheckBox
                android:id="@+id/cb_set_new_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/google_1x"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/google_1x"
                android:text="Присылать сообщение о собранной цепочке долгов"
                />

            <CheckBox
                android:id="@+id/cb_set_chain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/google_1x"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/google_1x"
                android:text="Разновалютная цепь долгов"
                />

            <CheckBox
                android:id="@+id/cb_set_diff_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>