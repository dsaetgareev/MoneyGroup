<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_io_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/tv_io_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:text="@string/i_owe_title"
                android:textAlignment="center"
                android:textColor="@color/colorRedForMoneybook"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_io_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/google_1x"
                        android:text="@string/name"
                        android:textColor="@color/colorGrayForMoneybook"

                        />

                    <TextView
                        android:id="@+id/tv_io_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="5sp"
                        android:background="@drawable/text_desigen_for_debt"
                        android:padding="5sp"
                        android:text="name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_io_phone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:text="@string/tv_tel"
                    android:textColor="@color/colorGrayForMoneybook"

                    />

                <TextView
                    android:id="@+id/tv_io_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"

                    android:background="@drawable/text_desigen_for_debt"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="9283293892"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_io_summ_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:text="@string/summ"
                    android:textColor="@color/colorGrayForMoneybook"

                    />

                <TextView
                    android:id="@+id/tv_io_summ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="@drawable/text_desigen_for_debt"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="324242"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_io_currency_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:text="@string/currency"
                    android:textColor="@color/colorGrayForMoneybook"

                    />

                <TextView
                    android:id="@+id/tv_io_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="@drawable/text_desigen_for_debt"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="RUR"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_io_note_for_yourself_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:text="@string/note_for_yourself"
                    android:textColor="@color/colorGrayForMoneybook" />

                <TextView
                    android:id="@+id/tv_io_note_for_yourself"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/text_desigen_for_debt"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_io_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/google_1x"
                    android:text="@string/Comment"
                    android:textColor="@color/colorGrayForMoneybook" />

                <TextView
                    android:id="@+id/tv_io_comment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="5sp"
                    android:background="@drawable/text_desigen_for_debt"
                    android:paddingLeft="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_io_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_io_form_container"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"

            android:background="@drawable/round_shape_button"
            android:padding="10sp"
            android:text="@string/btn_to_delete"
            android:textColor="@color/colorBlueForMoneybook" />


    </RelativeLayout>
</ScrollView>