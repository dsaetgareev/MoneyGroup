<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_control_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/control_question"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/et_password_from_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="question"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_control_question"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_send_code_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password_from_question"
        android:layout_centerInParent="true"
        android:layout_marginTop="51dp"
        android:text="OK" />

</RelativeLayout>