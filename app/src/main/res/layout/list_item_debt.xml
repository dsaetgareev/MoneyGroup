<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/google_1x"
    android:padding="10sp"
    >


    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:layout_height="wrap_content"
        android:text="name"
        />

    <TextView
        android:id="@+id/tv_summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toStartOf="@id/tv_currency"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:layout_marginRight="@dimen/google_1x"
        android:text="2500" />

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="5sp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/tv_icon"
        android:layout_marginRight="@dimen/google_1x"
        android:text="RUB" />

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5sp"
        android:text=">"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:layout_below="@+id/tv_summ"
        />

</RelativeLayout>