<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/rl_reg_password"
        >

        <TextView
            android:id="@+id/fg_tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/google_1x"
            android:text="@string/enter_new_password" />

        <EditText
            android:id="@+id/fg_et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_tv_new_password"
            android:layout_marginTop="5dp"
            android:hint="@string/enter_new_password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/fg_tv_password_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:layout_below="@+id/fg_et_new_password"
            android:text="@string/password_description" />

        <LinearLayout
            android:id="@+id/fg_ll_valid_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_tv_password_description"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/fg_iv_lower_case_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="строчная буква"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fg_iv_upper_case_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="прописная буква" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/fg_iv_number_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="цифра" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/fg_iv_length_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="не менее 6 символов" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/fg_tv_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_ll_valid_icons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/confirm_password" />

        <EditText
            android:id="@+id/fg_et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_tv_confirm_password"
            android:layout_marginTop="5dp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/fg_iv_confirm_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_et_confirm_password"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_action_name" />


        <Button
            android:id="@+id/fg_bt_save_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_iv_confirm_valid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/google_1x"
            android:text="@string/save" />



        <TextView
            android:id="@+id/fg_tv_password_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="@string/tv_back"
            android:layout_margin="@dimen/google_1x"
            android:textSize="20sp"
            android:textColor="@color/oweMe"
            />

    </RelativeLayout>
</ScrollView>