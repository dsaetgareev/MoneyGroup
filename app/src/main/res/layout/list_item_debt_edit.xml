<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10sp"

    >

    <CheckBox
        android:id="@+id/cb_item_debt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cb_item_debt_edit"
        android:text="name"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_currency"
        android:layout_marginRight="@dimen/google_1x"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:text="2500"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_icon"
        android:textStyle="bold"
        android:layout_margin="5sp"
        android:layout_centerVertical="true"
        android:text="RUB" />

    <TextView
        android:id="@+id/tv_icon"
        android:layout_margin="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text=">"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:layout_below="@+id/tv_summ"
        />

</RelativeLayout>