<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.owesme.OwesmePersonActivity">

    <LinearLayout
        android:id="@+id/ll_omp_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_omp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlueForMoneybook"
            android:text="@string/tv_omp_title"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                >
                <TextView
                    android:id="@+id/tv_omp_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:layout_margin="@dimen/google_1x"
                    android:textColor="@color/colorGrayForMoneybook"
                    />

                <TextView
                    android:id="@+id/tv_omp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_margin="5sp"
                    android:background="@drawable/text_desigen_for_debt"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="5sp"



                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_omp_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayForMoneybook"
                android:text="@string/tv_tel"
                android:layout_margin="@dimen/google_1x"
                />

            <TextView
                android:id="@+id/tv_omp_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9283293892"

                android:layout_margin="5sp"
                android:background="@drawable/text_desigen_for_debt"
                android:textSize="14sp"
                android:paddingLeft="5sp"
                android:textColor="@android:color/black"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_omp_summ_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summ"
                android:textColor="@color/colorGrayForMoneybook"
                android:layout_margin="@dimen/google_1x"
                />

            <TextView
                android:id="@+id/tv_omp_summ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="324242"
                android:layout_margin="5sp"
                android:background="@drawable/text_desigen_for_debt"
                android:textSize="14sp"
                android:paddingLeft="5sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="@android:color/black"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_omp_currency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency"
                android:textColor="@color/colorGrayForMoneybook"
                android:layout_margin="@dimen/google_1x"
                />

            <TextView
                android:id="@+id/tv_omp_currency"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="RUR"
                android:layout_margin="5sp"
                android:background="@drawable/text_desigen_for_debt"
                android:textSize="14sp"
                android:paddingLeft="5sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_omp_note_for_yourself_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note_for_yourself"
                android:layout_margin="@dimen/google_1x"
                android:textColor="@color/colorGrayForMoneybook"
                />

            <TextView
                android:id="@+id/tv_omp_note_for_yourself"
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:background="@drawable/text_desigen_for_debt"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingLeft="5sp"
                android:layout_height="60dp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@android:color/black"
            >

            <TextView
                android:id="@+id/tv_omp_comment_title"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGrayForMoneybook"
                android:layout_height="wrap_content"
                android:text="@string/Comment"
                android:layout_margin="@dimen/google_1x"
                />

            <TextView
                android:id="@+id/tv_omp_comment"
                android:layout_margin="5sp"
                android:background="@drawable/text_desigen_for_debt"
                android:textSize="14sp"
                android:paddingLeft="5sp"
                android:paddingTop="5sp"
                android:layout_height="60dp"
                android:textColor="@android:color/black"
                android:paddingBottom="5sp"
                android:layout_width="match_parent"


                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_omp_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_omp_form_container"
        android:background="@drawable/round_shape_button"
        android:padding="10sp"
        android:textColor="@color/colorBlueForMoneybook"
        android:text="@string/btn_to_delete"
        android:layout_centerHorizontal="true"
        android:layout_margin="15sp"
        />



</RelativeLayout>
</ScrollView>