<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <!--<ImageView-->
    <!--android:id="@+id/iv_main_logo"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@mipmap/logo11"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--/>-->

    <TextView
        android:id="@+id/login_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"
        android:text="@string/into_in_profil"
        android:textColor="@color/colorGreenMoneybook"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/login_data_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_title_text_view"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="@string/login_text"
                android:textColor="@color/colorGrayForMoneybook"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/number_array"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#0000" />


            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/phone_number"
                android:layout_marginLeft="40dp"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="@string/password_text"
                android:textColor="@color/colorGrayForMoneybook"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_password_number"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:hint="@string/password"

                android:inputType="textPassword" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_data_container"
        android:layout_marginTop="15sp"
        android:layout_centerInParent="true"
        android:text="@string/login_button"
        android:background="@drawable/round_shape_button"
        android:padding="5sp"
        android:textColor="@color/colorBlueForMoneybook"/>

    <Button
        android:id="@+id/forgot_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_alignEnd="@+id/login_title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_shape_button"
        android:padding="5sp"
        android:text="@string/forgot_button"
        android:textColor="@color/colorBlueForMoneybook" />

    <Button
        android:id="@+id/registration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape_button"
        android:textColor="@color/colorBlueForMoneybook"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/registration_button" />


</RelativeLayout>