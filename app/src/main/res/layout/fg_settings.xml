<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/rl_settings"
        >

        <LinearLayout
            android:id="@+id/ll_set_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_desigen_for_debt"
                android:src="@mipmap/logo11" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/text_fielld_design"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_set_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/text_fielld_design"
                    android:text="+79171234567" />

                <Button
                    android:id="@+id/bt_set_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_shape_button"
                    android:textColor="@color/colorBlueForMoneybook"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
                    android:text="@string/exit"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_set_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_set_header"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ll_set_reset_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/planets_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="2" />

                <Button
                    android:id="@+id/bt_set_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"

                    android:textSize="11sp"
                    android:background="@drawable/round_shape_button"
                    android:textColor="@color/colorBlueForMoneybook"
                    android:lines="4"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="Установить"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:padding="5dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bt_set_archive_see"
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_shape_button"
                    android:textColor="@color/colorBlueForMoneybook"
                    android:layout_margin="10dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="@string/view_archive" />

                <Button
                    android:id="@+id/bt_set_change_pass"
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_shape_button"
                    android:textColor="@color/colorBlueForMoneybook"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:text="@string/change_password"


                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_set_push_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/ll_set_middle"
            android:background="@color/colorGreenMoneybook"
            android:text="@string/notifications"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_set_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_set_push_title"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/google_1x"
                android:layout_marginRight="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="@dimen/google_1x"
                    android:text="@string/not_new_debt" />

                <CheckBox
                    android:id="@+id/cb_set_new_debt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/google_1x"
                android:layout_marginRight="@dimen/google_1x">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"

                    android:padding="@dimen/google_1x"
                    android:text="@string/not_new_cycle" />

                <CheckBox
                    android:id="@+id/cb_set_chain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_set_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:text="@string/save"
                android:background="@drawable/round_shape_button"
                android:textColor="@color/colorBlueForMoneybook"
                android:textSize="12dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/bt_set_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@drawable/round_shape_button"
                android:textColor="@color/colorBlueForMoneybook"
                android:textSize="12dp"
                android:text="@string/akkaunt_remove"
                android:textAlignment="center" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>